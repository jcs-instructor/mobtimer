{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "esModuleInterop": true,
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
  },
  "include": [
    "./src", "mobtimer-api/src", 
  ],
  "exclude": [
    "./test",
    "./src/client",
  ],
}